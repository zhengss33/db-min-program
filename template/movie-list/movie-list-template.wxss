@import '/template/movie/movie-template.wxss';

.movie-list-container {
    background-color: #fff;
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
}

.movie-head {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    font-size: 24rpx;
}

.more-text {
    margin-right: 10rpx;
    color: #1f4ba5;
}

.more-img {
    width: 9rpx;
    height: 16rpx;
}

.movies-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}